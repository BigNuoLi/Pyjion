FROM quay.io/pypa/manylinux2014_aarch64
ARG DOTNET_VERSION=6.0.100-rc.2.21505.57
RUN echo "Building Pyjion with .NET  $DOTNET_VERSION"
COPY . /src
WORKDIR /src
ENV TZ=Europe/London
RUN yum install -y wget && yum clean all
RUN ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone
RUN wget https://dotnetcli.azureedge.net/dotnet/Sdk/${DOTNET_VERSION}/dotnet-sdk-${DOTNET_VERSION}-linux-arm64.tar.gz
RUN mkdir -p dotnet && tar zxf dotnet-sdk-${DOTNET_VERSION}-linux-arm64.tar.gz -C dotnet
ENV DOTNET_ROOT=/src/dotnet
RUN chmod +x /src/.github/build-manylinux.sh
ENTRYPOINT ["/src/.github/build-manylinux.sh"]
